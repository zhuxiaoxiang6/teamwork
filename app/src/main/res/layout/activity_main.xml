<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.heda.teamwork.MainActivity">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#CD2626"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/myportrait"
            android:background="@drawable/teacherportrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="37dp"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="登录"
            android:id="@+id/btn_mylogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/myintroduce"
            android:text="立即登录，解锁更多使用功能"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@+id/myportrait"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/myimage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            />

         <ListView
             android:id="@+id/mylistview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

         </ListView>

    </LinearLayout>

</LinearLayout>
